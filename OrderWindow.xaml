<Window x:Class="TestApp.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <DockPanel>
        <Button Width="100" Height="50" Content="Сохранить" VerticalAlignment="Bottom" Click="SaveJsonFile"></Button>
        <DataGrid x:Name="OrderGrid" MouseDoubleClick="OnContentChanged" CanUserResizeRows="False" x:FieldModifier="public" AutoGenerateColumns="False" ColumnWidth="*" AddingNewItem="OnContentChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название блюда" Binding="{Binding nomenclature.name}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер" Binding="{Binding amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"></DataGridTextColumn>
                <DataGridTextColumn Header="Окончательная сумма" Binding="{Binding resultPrice}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество блюд" Binding="{Binding number}" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
